{
  "include": ["src", "src/**/*.json"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "target": "es2017",
    "module": "CommonJS",
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
}
